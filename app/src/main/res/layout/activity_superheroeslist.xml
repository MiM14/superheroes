<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.SuperHeroesListActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="@dimen/both_spacing">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_size"
            >
            <ImageView
                android:layout_width="@dimen/image_size"
                android:layout_height="match_parent"
                android:src="@drawable/ic_spider_template"
                android:layout_alignParentStart="true"
                android:id="@+id/image"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/title"
                tools:text="Spider-Man"
                android:layout_toEndOf="@id/image"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/subtitle"
                tools:text="Peter Parker"
                android:layout_toEndOf="@id/image"
                android:layout_below="@id/title"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/occupation"
                tools:text="Freelance, Photographer and Teacher"
                android:layout_toEndOf="@id/image"
                android:layout_alignParentBottom="true"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:layout_marginStart="@dimen/margin_size"
                android:layout_marginTop="@dimen/margin_size"
                android:layout_marginEnd="@dimen/margin_size"
                android:layout_marginBottom="@dimen/margin_size"
                android:textSize="20sp"
                tools:text=">" />

        </RelativeLayout>

    </LinearLayout>

</ScrollView>